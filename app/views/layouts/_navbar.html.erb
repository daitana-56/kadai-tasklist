<!-- ナビバー共通 -->
<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <a href="/" class="navbar-brand">TaskBoard</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarcontent">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse justify-content-end" id="navbarcontent">
      <ul class="navbar-nav">
        <% if logged_in? %>
          <li  class="nav-item"><%= link_to '新規タスク登録', new_task_path, class: 'nav-link' %></li>
          <li  class="nav-item"><%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %></li>
        <% else %>
          <li  class="nav-item"><%= link_to '新規ユーザ登録', signup_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
    
</header>