<%= form_with(model: task, local: true) do |f| %>

  <!-- エラーメッセージ -->
  <% if @task.errors.any? %>
    <div id="error-explanation">
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.label :content, '状態' %>
  <%= f.text_field :status %>
  
  <%= f.submit '登録'%>
<% end %>