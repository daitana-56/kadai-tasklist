<div class ="row">
  <div class="col-6">
    <%= form_with(model: task, local: true) do |f| %>
        
      <!-- エラーメッセージ -->
      <% if @task.errors.any? %>
        <div id="error-explanation" class="alert alert-warning">
          <ul>
            <% @task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
          
      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, '状態' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>
          

      <%= f.submit 'タスクの登録', class: 'btn btn-primary' %>
          
    <% end %>
  </div>
