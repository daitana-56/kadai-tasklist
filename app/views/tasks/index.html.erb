<!-- タスク一覧ページ -->
<div class="text-center mb-4">
  <h1><%= current_user.name %>さんのタスク一覧</h1>
</div>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク名</th>
        <th>タスク状態</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
   
  <%= paginate @tasks %>
<% else %>
  <div class="text-center mb-4">
    <p>タスク未登録です。タスクを登録して管理をしましょう。</p>
  </div>
<% end %>
