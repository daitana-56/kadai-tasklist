<!-- タスク詳細ページ -->
<div class="text-center mb-4">
  <h1>id：<%= @task.id %> &gt; <%= @task.content %> 詳細ページ</h1>
</div>

<div class="row">
  <div class="col-8 offset-2">
    <table class="table table-bordered">
      <tr>
        <th>id</th>
        <th>タスク名</th>
        <th>タスク状態</th>
      </tr>
      <tr>
        <td><%= @task.id %></td>
        <td><%= @task.content %></td>
        <td><%= @task.status %></td>
      </tr>
    </table>
    
    <div class="text-center mt-4">
    <%= link_to 'タスクを編集', edit_task_path(@task), class: 'btn btn-primary' %>
    <%= link_to 'タスクを削除', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-danger w-45' %>
    </div>  
  </div>
</div>